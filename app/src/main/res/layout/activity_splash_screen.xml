<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashScreenActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/collageLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/kongu_logo_without_text"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:transitionName="logoTrans"/>

    <TextView
        android:id="@+id/collageName"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:text="KEC"
        android:fontFamily="@font/alfa_slab_one"
        android:transitionName="nameTrans"/>
    <TextView
        android:id="@+id/collageSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Transform Yourself"
        android:textColor="@color/grey_60" />
</LinearLayout>